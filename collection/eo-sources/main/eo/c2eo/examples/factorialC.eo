+package c2eo.examples

+alias org.eolang.txt.sprintf
+alias org.eolang.io.stdout

+alias c2eo.ctypes.c_int32

[args] > factorialC

  c_int32 > n
  c_int32 > result

  if. > factorial
    n.less 2
    seq
    seq
      result.write (n.mul result)
      n.write (n.sub 1)
      factorial

  seq > main
    result.write 1
    n.write (args.get 0).as-int
    stdout (sprintf "%d! = " n)
    factorial
    stdout (sprintf "%d\n" result)
