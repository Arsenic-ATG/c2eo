+package c2eo.ctypes

+alias org.eolang.txt.sprintf

[] > cInt

  memory > m
  m > @

  [value] > write
    -2147483648 > min
    2147483647 > max
    4294967296 > range

    if. > @
      value.greater max
      ^.m.write (((value.add min).mod range).add min)
      if.
        value.less min
        ^.m.write (((value.add 2147483649).mod range).add max)
        ^.m.write value

  sprintf "%d" $ > toString

